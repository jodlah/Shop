{% extends 'ShopBundle:shop:base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <form action={{ path('show_products') }} method="post">
                <div class="col-xs-4 col-xs-offset-2">

                        <input class="form-control" type="text" name="name" placeholder="Search"><br>

                        <select class="form-control" name="categories">
                                <option value="">All Categories</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}">{{ category.name }}</option>
                            {% endfor %}
                        </select><br>

                        <input class="btn btn-default" type="submit" value="Search">
                </div>
            </form>
        </div>
    </div>
    <div class="jumbotron">
        <img src="http://res.cloudinary.com/vertigo-studio-srl/image/upload/f_auto/v1451915000/tumblr_nvcremRQTT1ugh5sto2_r1_12801_cxscvf.jpg"/>
    <div>
    {#{{ render(path('products_all')) }}#}

{% endblock %}