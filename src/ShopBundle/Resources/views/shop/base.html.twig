<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Main{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    {% block nav %}
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <p class="navbar-brand">Shop</p>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="{{ path('main_page') }}">HOME</a>
                    </li>
                    <li>
                        <a href="{{ path('products_all') }}">PRODUCTS</a>
                    </li>
                    <li>
                        <a href="{{ path('shop_shop_showcart') }}">SHOPPING CART</a>
                    </li>
                    <li>
                        <a href="">CONTACT US</a>
                    </li>
                    {% if is_granted('ROLE_USER') %}
                        <li>
                            <a href="{{ path ('fos_user_profile_show') }}">MY ACCOUNT</a>
                        </li>
                    {% endif %}
                    {% if not is_granted('ROLE_USER') %}
                    <li>
                        <a href="{{ path ('fos_user_security_login') }}">SIGN IN</a>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_registration_register') }}">REGISTER</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}">LOGOUT</a>
                    </li>
                    <div style="text-align:right; color: darkgrey;">Welcome: {{ app.user.username }}</div>
                    {% endif %}
                </ul>
            </div>
        </nav>
    {% endblock %}

    {% block body %}
    {% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>