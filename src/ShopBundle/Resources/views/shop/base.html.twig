<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Shop{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="{{ url('homepage') }}../css/style.css">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    {% block nav %}
        <nav  class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <p class="navbar-brand"><span class="glyphicon glyphicon-shopping-cart"></span></p>
                </div>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('main_page') }}">Home</a>
                    </li>
                    <li>
                        <a href="{{ path('products_all') }}">Products</a>
                    </li>
                    <li>
                        <a href="{{ path('shop_shop_showcart') }}">Shopping Cart</a>
                    </li>
                    <li>
                        <a href="">Contact Us</a>
                    </li>
                    {% if is_granted('ROLE_USER') %}
                        <li>
                            <a href="{{ path ('fos_user_profile_show') }}">My Account</a>
                        </li>
                    {% endif %}
                    {% if not is_granted('ROLE_USER') %}
                    <li>
                        <a href="{{ path ('fos_user_security_login') }}">Sign In</a>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_registration_register') }}">Register</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}">Logout</a>
                    </li>
                    {% endif %}
                </ul>
                {% if is_granted('ROLE_USER') %}
                <div id="welcome">Welcome: {{ app.user.username }}</div>
                {% endif %}
            </div>
        </nav>
    {% endblock %}

    {% block body %}
    {% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>