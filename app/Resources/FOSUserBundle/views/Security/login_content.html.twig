{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container" id="login">
    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
        <h2 class="form-signin-heading">Please sign in</h2>
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <label class="sr-only" for="username">{{ 'username'|trans }}</label>
        <input class="form-control" placeholder="username" type="text" id="username" name="_username" value="{{ last_username }}" required="required" /><br>

        <label class="sr-only" for="password">{{ 'password'|trans }}</label>
        <input class="form-control" placeholder="Password" type="password" id="password" name="_password" required="required" /><br>

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'remember me'|trans }}</label><br>

        <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'Sign In'|trans }}" />
    </form>
</div>
